import pygame
import random

# ØªÙ‡ÙŠØ¦Ø© pygame
pygame.init()

# Ø¥Ø¹Ø¯Ø§Ø¯Ø§Øª Ø§Ù„Ø´Ø§Ø´Ø©
WIDTH, HEIGHT = 800, 600
screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("ğŸ® Ù„Ø¹Ø¨Ø© Ø§Ù„ØªÙ‚Ø§Ø· Ø§Ù„Ø¯ÙˆØ§Ø¦Ø±")

# Ø£Ù„ÙˆØ§Ù†
WHITE = (255, 255, 255)
RED = (255, 0, 0)
BLUE = (0, 0, 255)

# Ø¥Ø¹Ø¯Ø§Ø¯Ø§Øª Ø§Ù„Ù„Ø§Ø¹Ø¨
player_size = 50
player_x = WIDTH // 2
player_y = HEIGHT // 2
player_speed = 5

# Ø¥Ø¹Ø¯Ø§Ø¯Ø§Øª Ø§Ù„Ù‡Ø¯Ù (Ø§Ù„Ø¯Ø§Ø¦Ø±Ø©)
circle_radius = 20
circle_x = random.randint(circle_radius, WIDTH - circle_radius)
circle_y = random.randint(circle_radius, HEIGHT - circle_radius)

# Ø§Ù„Ù†Ù‚Ø§Ø·
score = 0
font = pygame.font.SysFont(None, 40)

# Ø­Ù„Ù‚Ø© Ø§Ù„Ù„Ø¹Ø¨Ø©
running = True
clock = pygame.time.Clock()

while running:
    clock.tick(60)  # 60 Ø¥Ø·Ø§Ø± ÙÙŠ Ø§Ù„Ø«Ø§Ù†ÙŠØ©
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

    # Ø§Ù„ØªØ­ÙƒÙ… Ø¨Ø§Ù„Ù…Ø±Ø¨Ø¹
    keys = pygame.key.get_pressed()
    if keys[pygame.K_LEFT]:
        player_x -= player_speed
    if keys[pygame.K_RIGHT]:
        player_x += player_speed
    if keys[pygame.K_UP]:
        player_y -= player_speed
    if keys[pygame.K_DOWN]:
        player_y += player_speed

    # Ø­Ø¯ÙˆØ¯ Ø§Ù„Ø´Ø§Ø´Ø©
    player_x = max(0, min(WIDTH - player_size, player_x))
    player_y = max(0, min(HEIGHT - player_size, player_y))

    # Ø§Ù„ØªØ­Ù‚Ù‚ Ù…Ù† Ø§Ù„Ø§ØµØ·Ø¯Ø§Ù…
    if (player_x < circle_x < player_x + player_size and
        player_y < circle_y < player_y + player_size):
        score += 1
        circle_x = random.randint(circle_radius, WIDTH - circle_radius)
        circle_y = random.randint(circle_radius, HEIGHT - circle_radius)

    # Ø§Ù„Ø±Ø³Ù…
    screen.fill(WHITE)
    pygame.draw.rect(screen, BLUE, (player_x, player_y, player_size, player_size))
    pygame.draw.circle(screen, RED, (circle_x, circle_y), circle_radius)
    score_text = font.render(f"Ø§Ù„Ù†Ù‚Ø§Ø·: {score}", True, (0, 0, 0))
    screen.blit(score_text, (10, 10))
    pygame.display.flip()

pygame.quit()
